{
  "name": "jest-badge-generator",
  "version": "1.0.4",
  "main": "src/cli.js",
  "description": "Create a group of coverage badges from jest to an output folder",
  "bin": "src/cli.js",
  "files": [
    "src/*"
  ],
  "scripts": {
    "test": "jest --coverage --passWithNoTests",
    "test:make-badges": "npm run test && node . "
  },
  "author": "Vinicios Clarindo",
  "license": "MIT",
  "dependencies": {
    "mkdirp": "^0.5.1"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text",
      "text-summary"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.jsx?$"
  },
  "devDependencies": {
    "jest": "^24.9.0"
  }
}
